CC              := gcc
OBJCOPY 	= 	objcopy

%.efi: %.so
	$(OBJCOPY) -j .text -j .sdata -j .data -j .dynamic -j .dynsym -j .rel \
		-j .rela -j .reloc -S --target=$(FORMAT) $*.so $@


HOST  = $(shell $(CC) -dumpmachine | sed "s/\(-\).*$$//")
ARCH := $(shell $(CC) -dumpmachine | sed "s/\(-\).*$$//")

LIBDIR=/usr/local/lib

ifeq ($(ARCH),x86_64)
	FORMAT=efi-app-x86-64
else
	ARCH=ia32
	FORMAT=efi-app-$(ARCH)
endif

INCDIR := /usr/local/include


EFILIB          = /usr/local/lib
EFI_CRT_OBJS    := $(EFILIB)/crt0-efi-$(ARCH).o
EFI_LDS         := $(EFILIB)/elf_$(ARCH)_efi.lds

CFLAGS=-I. -I$(INCDIR)/efi -I$(INCDIR)/efi/$(ARCH) \
		-DEFI_FUNCTION_WRAPPER -fPIC -fshort-wchar -ffreestanding \
		-Wall -Idriver/ -D$(ARCH) -Werror

ifeq ($(ARCH),ia32)
	ifeq ($(HOST),x86_64)
		CFLAGS += -m32
	endif
endif
ifeq ($(ARCH),x86_64)
	CFLAGS += -mno-red-zone
endif

LDFLAGS=-T $(EFI_LDS) -Bsymbolic -shared -nostdlib -znocombreloc \
		-L$(LIBDIR) $(EFI_CRT_OBJS)

# This image name should be main. Otherwise it will not be detected as bootloader as it is defined in nsh
IMAGE=main.efi 
OBJS = main.o
# FS = fs/fs.o

DRIVERS = driver/graphics.o

all: $(IMAGE)

main.efi: main.so

main.so: $(OBJS) $(DRIVERS)
	$(LD) $(LDFLAGS) -o $@ $^  -lgnuefi -lefi $(shell $(CC) $(CFLAGS) -print-libgcc-file-name)

clean:
	rm -f $(IMAGE) main.so $(OBJS) $(DRIVERS)


NAME = NesUEFI
OVMF_DIR 		:= ../OVMFbin

buildimg:
	dd if=/dev/zero of=$(NAME).img bs=512 count=93750
	mformat -i $(NAME).img -f 1440 ::
	mmd -i $(NAME).img ::/EFI
	mmd -i $(NAME).img ::/EFI/BOOT
	mcopy -i $(NAME).img $(IMAGE) ::/EFI/BOOT
	mcopy -i $(NAME).img startup.nsh ::

run:
	qemu-system-x86_64  -drive format=raw,file=$(NAME).img -m 256M -cpu qemu64 \
						-drive if=pflash,format=raw,unit=0,file="$(OVMF_DIR)/OVMF_CODE-pure-efi.fd",readonly=on \
						-drive if=pflash,format=raw,unit=1,file="$(OVMF_DIR)/OVMF_VARS-pure-efi.fd" \
						-net none

